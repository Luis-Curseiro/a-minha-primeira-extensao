{
  "name": "Minha Primeira Extensão",
  "version": "1.0.0",
  "manifest_version": 1, // CORRIGIDO: Deve ser 1, conforme a documentação oficial.
  "author": "Luís",
  "description": "Um ponto de partida simples para o desenvolvimento de extensões.",
  "action": {
    "title": "Abrir Extensão", // Corresponde ao `title` do tutorial
    "icon": "/icon.svg",      // Corresponde ao `icon` do tutorial (usaremos um ícone mais simples abaixo)
    "popover": "./index.html", // Corresponde ao `popover` do tutorial, apontando para o seu index.html
    "height": 600,           // Configurações do tamanho do popover (opcional, mas bom para consistência)
    "width": 400
  }
}
